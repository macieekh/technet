<%= form_for(@part) do |f| %>
  <% if @part.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@part.errors.count, "error") %> prohibited this part from being saved:</h2>

      <ul>
      <% @part.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :code %><br>
    <%= f.text_field :code %>
  </div>
  <br>
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Ta część pasuje do następujących urządzeń:</div>
  

  <!-- Table -->
  <table class="table">
  <thead>
    <tr>
    <td> </td>
    </tr>
  </thead>
  <tbody>
    <% Model.all.each do |model| %>
      <tr><td><%= check_box_tag "part[model_ids][]", model.id, @part.model_ids.include?(model.id) %>
      <%= model.name %> </td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>
   
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
